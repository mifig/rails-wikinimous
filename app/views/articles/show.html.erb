<div class="row mt-5 pt-5 justify-content-center">
  <div class="col-sm-8 col-sm-offset-2">
    <article>
      <h1>
        <%= @article.title %>
        <%= link_to raw("<i class='fas fa-edit'></i>"), edit_article_path(@article) %>
        <%= link_to raw("<i class='far fa-trash-alt'></i>"), article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"} %>
      </h1>
      <hr>
      <p class="font-weight-light"><%= @article.content %></p>
    </article>
  </div>
</div>